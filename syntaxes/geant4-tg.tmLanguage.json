{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Geant4 Text Geometry",
  "scopeName": "source.geant4-tg",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#include"
    },
    {
      "include": "#tags"
    },
    {
      "include": "#parameters"
    },
    {
      "include": "#units"
    },
    {
      "include": "#math_functions"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.geant4-tg",
          "match": "//.*$"
        }
      ]
    },
    "include": {
      "patterns": [
        {
          "name": "keyword.control.include.geant4-tg",
          "match": "\\b#include\\b"
        }
      ]
    },
    "tags": {
      "patterns": [
        {
          "name": "keyword.other.tag.geant4-tg",
          "match": ":[a-zA-Z_]+"
        }
      ]
    },
    "parameters": {
      "patterns": [
        {
          "name": "variable.other.geant4-tg",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "units": {
      "patterns": [
        {
          "name": "keyword.other.unit.geant4-tg",
          "match": "\\*[a-zA-Z]+"
        }
      ]
    },
    "math_functions": {
      "patterns": [
        {
          "name": "support.function.math.geant4-tg",
          "match": "\\b(sin|cos|tan|asin|acos|atan|atan2|sinh|cosh|tanh|sqrt|exp|log|log10|pow)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "support.constant.solid.geant4-tg",
          "match": "\\b(BOX|TUBE|TUBS|CONE|CONS|TRD|PARA|TRAP|SPHERE|ORB|TORUS|POLYCONE|POLYHEDRA|ELLIPTICAL_TUBE|ELLIPSOID|ELLIPTICAL_CONE|HYPE|TET|TWISTED_BOX|TWISTED_TRAP|TWISTED_TRD|TWISTED_TUBS)\\b"
        },
        {
          "name": "support.constant.boolean.geant4-tg",
          "match": "\\b(UNION|SUBTRACTION|INTERSECTION)\\b"
        },
        {
          "name": "support.constant.visibility.geant4-tg",
          "match": "\\b(ON|OFF|TRUE|FALSE)\\b"
        },
        {
          "name": "support.constant.param-type.geant4-tg",
          "match": "\\b(LINEAR_X|LINEAR_Y|LINEAR_Z|LINEAR|CIRCLE|SQUARE_XY|SQUARE_XZ|SQUARE_YZ|SQUARE|DIR_X|DIR_Y|DIR_Z)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.geant4-tg",
          "match": "\\b[+-]?(\\d+(\\.\\d*)?|\\.\\d+)([eE][+-]?\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.geant4-tg",
          "match": "[\\+\\-\\*/]"
        }
      ]
    }
  }
}
