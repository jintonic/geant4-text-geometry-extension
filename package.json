{
  "name": "geant4-tg",
  "displayName": "Geant4 Text Geometry",
  "description": "Syntax highlighting and support for Geant4 Text Geometry (.tg) files.",
  "version": "1.0.0",
  "publisher": "jintonic",
  "engines": {
    "vscode": "^1.61.0"
  },
  "scripts": {
    "package": "vsce package",
    "publish": "ovsx publish",
    "release": "npm version patch && git push origin main --tags",
    "format": "prettier --write ."
  },
  "configurationDefaults": {
    "[geant4-tg]": {
      "files.insertFinalNewline": true,
      "files.trimTrailingWhitespace": true
    }
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "geant4",
    "text geometry",
    "tg",
    "physics",
    "simulation"
  ],
  "contributes": {
    "languages": [
      {
        "id": "geant4-tg",
        "aliases": [
          "Geant4 Text Geometry",
          "geant4-tg"
        ],
        "extensions": [
          ".tg"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "geant4-tg",
        "scopeName": "source.geant4-tg",
        "path": "./syntaxes/geant4-tg.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "geant4-tg",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jintonic/geant4-text-geometry-extension"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.7.1",
    "ovsx": "^0.10.7",
    "prettier": "^3.2.5"
  }
}
